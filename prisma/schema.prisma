datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String?
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  // Relation: one user can have many files
  files File[]
  posts Post[]
}

model File {
  id         Int      @id @default(autoincrement())
  filename   String
  path       String
  mimeType   String
  size       Int
  uploadedAt DateTime @default(now())
  userId     Int?
  user       User?    @relation(fields: [userId], references: [id])
}

model Session {
  id        String   @id @default(uuid())
  sid       String   @unique
  data      String
  expiresAt DateTime
}
